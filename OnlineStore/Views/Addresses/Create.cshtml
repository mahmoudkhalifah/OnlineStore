@model OnlineStore.Models.Address

@{
    ViewData["Title"] = "Create";
}
 <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css"> 
 <link rel="stylesheet" type="text/css" href="~/css/site.css"> 

<div class="row mt-3 mx-3" style="margin-top:25px ;">
  <div class="col-md-3">
    <div style="margin-top: 50px; margin-left: 10px;" class="text-center">
      <i id="animationDemo" data-mdb-animation="slide-right" data-mdb-toggle="animation"
        data-mdb-animation-reset="true" data-mdb-animation-start="onScroll"
        data-mdb-animation-on-scroll="repeat" class="fas fa-3x fa-shipping-fast text-white"></i>
      <h3 class="mt-3 text-white">Welcome</h3>
      <p class="white-text">You are 30 seconds away from compleating your order!</p>
    </div>
    <div class="text-center">
      <button   onclick="location.href='@Url.Action("Checkout", "Orders")'" class="btn btn-white btn-rounded back-button">Go back</button>
    </div>


  </div>
  <div class="col-md-9 justify-content-center">
    <div class="card card-custom pb-4">
      <div class="card-body mt-0 mx-5">
        <div class="text-center mb-3 pb-2 mt-3">
          <h4 style="color: #495057 ;">Delivery Details</h4>
        </div>

        <form  asp-action="Create" class="mb-0">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <input type="hidden" name="CustomerId" value=@ViewBag.CustomerId  class="form-control"/>
          <div class="row mb-4">
            <div class="col">
                <div class="form-group form-outline">
                    <label asp-for="ApartmentNo" for="form9Example3" class="control-label form-label"></label>
                    <input asp-for="ApartmentNo" id="form9Example3" class="form-control input-custom" />
                    <span asp-validation-for="ApartmentNo" class="text-danger"></span>
               </div>     
            </div>
            <div class="col">
              <div class="form-group form-outline">
                    <label asp-for="FloorNumber" for="form9Example4" class="control-label form-label"></label>
                    <input asp-for="FloorNumber" id="form9Example4" class="form-control input-custom" />
                    <span asp-validation-for="FloorNumber" class="text-danger"></span>
               </div> 
            </div>
          </div> 

          <div class="row mb-4">
            <div class="col">
             <div class="form-group form-outline">
                    <label asp-for="Street" for="form9Example5" class="control-label form-label"></label>
                    <input asp-for="Street" id="form9Example5" class="form-control input-custom" />
                    <span asp-validation-for="Street" class="text-danger"></span>
               </div> 
            </div>
            <div class="col">
              <div class="form-group form-outline">
                    <label asp-for="Zone" for="form9Example6" class="control-label form-label"></label>
                    <input asp-for="Zone" id="form9Example6" class="form-control input-custom" />
                    <span asp-validation-for="Zone" class="text-danger"></span>
               </div> 
            </div>
          </div>

          <div class="row mb-4">
            <div class="col">
             <div class="form-group form-outline">
                    <label asp-for="City" for="form9Example7" class="control-label form-label"></label>
                    <input asp-for="City" id="form9Example7" class="form-control input-custom" />
                    <span asp-validation-for="City" class="text-danger"></span>
               </div> 
            </div>
            <div class="col">
              <div class="form-group form-outline">
                    <label asp-for="Governorate" for="form9Example8" class="control-label form-label"></label>
                    <input asp-for="Governorate" id="form9Example8" class="form-control input-custom" />
                    <span asp-validation-for="Governorate" class="text-danger"></span>
               </div> 
            </div>
          </div>

           <div class="row mb-4">
               <div class="col">
              <div class="form-group form-outline">
                    <label asp-for="Country" for="form9Example9" class="control-label form-label"></label>
                    <input asp-for="Country" id="form9Example0" class="form-control input-custom" />
                    <span asp-validation-for="Country" class="text-danger"></span>
               </div> 
            </div>
            <div class="col">
             <div class="form-group form-outline">
                    <label asp-for="NearestLandmark" for="form9Example10" class="control-label form-label"></label>
                    <input asp-for="NearestLandmark" id="form9Example10" class="form-control input-custom" />
                    <span asp-validation-for="NearestLandmark" class="text-danger"></span>
               </div> 
            </div>
          </div>

          <div class="float-end ">
            <!-- Submit button -->
            <button type="submit" value="Create" class="btn btn-primary btn-rounded"
              style="background-color: #0062CC ;">Add Address</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

 <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

