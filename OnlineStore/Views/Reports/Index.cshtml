@model OnlineStore.Models.Report

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <form method="POST">
        @if(ViewBag.startDate!=null)
        {
            <input type="date" te" name="startDate" class="form-control" value="@ViewBag.startDate.ToString("yyyy-MM-dd")" />
        }
        else
        {
            <input type="date" name="startDate" class="form-control" />
        }
        @if (ViewBag.endDate != null)
        {
            <input type="date" te" name="endDate" class="form-control" value="@ViewBag.endDate.ToString("yyyy-MM-dd")" />
        }
        else
        {
            <input type="date" name="endDate" class="form-control" />
        }
        <input type="submit" value="filter" class="btn btn-primary col-3" />
    </form>
    <form>
        <input onclick="this.form.submit()" type="submit" value="reset filters" class="btn btn-primary col-3" />
    </form>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalMoney)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalMoney)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalNumOfOrders)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalNumOfOrders)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalNumOfProducts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalNumOfProducts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalQuantityOfProducts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalQuantityOfProducts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">

            <table class="text-center">
                <thead>
                    <tr>
                        <th>Product name</th>
                        <th>Quantity sold</th>
                    </tr>
                </thead>
                <tbody>

                @foreach (Product product in Model.Products.Keys)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@Model.Products[product]</td>
                    </tr>
                }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
